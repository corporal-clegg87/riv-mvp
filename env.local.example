# Development Environment Configuration
# Copy this file to .env.local and fill in your values

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-32-character-jwt-secret-key-here

# Redis Configuration (for development)
REDIS_URL=redis://localhost:6379

# Tencent Cloud Configuration (for production secrets)
# These are only used in production, but can be set for testing
TENCENT_CLOUD_SECRET_ID=your-secret-id
TENCENT_CLOUD_SECRET_KEY=your-secret-key
TENCENT_CLOUD_REGION=ap-beijing

# Tencent SES Configuration
TENCENT_SES_FROM_EMAIL=your-email@yourdomain.com
TENCENT_SES_SMTP_HOST=smtp.tencentcloud.com
TENCENT_SES_SMTP_PORT=587
TENCENT_SES_SMTP_USERNAME=your-smtp-username
TENCENT_SES_SMTP_PASSWORD=your-smtp-password

# Development Services
MAILHOG_HOST=localhost
MAILHOG_PORT=1025
